<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
							   "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<typeAliases>
		<typeAlias alias="User" type="com.master.mybatisgenerated.User" />
		<typeAlias alias="Profile" type="com.master.mybatisgenerated.Profile" />
		<typeAlias alias="House" type="com.master.mybatisgenerated.House" />
		<typeAlias alias="UserCredentials" type="com.master.mybatisgenerated.UserCredentials" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3306/sh_manager_db" />
				<property name="username" value="root" />
				<property name="password" value="password" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="sh-manager/mybatis/sqlmap/UserMapper.xml" />
		<mapper resource="sh-manager/mybatis/sqlmap/ProfileMapper.xml" />
		<mapper resource="sh-manager/mybatis/sqlmap/HouseMapper.xml" />
		<mapper resource="sh-manager/mybatis/sqlmap/UserCredentialsMapper.xml" />
	</mappers>

</configuration>							 