<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="User">
	<resultMap type="User" id="com.master.mybatis.model.User">
		<result property="userId" column="userId" />
		<result property="userFirstName" column="userFirstName" />
		<result property="userLastName" column="userLastName" />
		<result property="userEmail" column="userEmail" />
	</resultMap>

	<select id="getAll" resultMap="User">
		SELECT *
		FROM sh-manager_db.Users
	</select>

	<select id="getById" parameterType="int" resultMap="User">
		SELECT *
		FROM
		sh-manager_db.Users WHERE userId=#{userId}
	</select>

	<select id="getByEmail" parameterType="int" resultMap="User">
		SELECT *
		FROM
		sh-manager_db.Users WHERE userEmail=#{userEmail}
	</select>

	<delete id="deleteById" parameterType="int">
		DELETE FROM
		sh-manager_db.Users
		WHERE userId=#{userId}
	</delete>

	<delete id="deleteByEmail" parameterType="int">
		DELETE FROM
		sh-manager_db.Users
		WHERE userEmail=#{userEmail}
	</delete>

	<insert id="insert" parameterType="User">
		<selectKey keyProperty="id" resultType="int" order="AFTER">
			select
			last_insert_id() as id
		</selectKey>
		INSERT INTO sh-manager_db.User (userEmail, userFirstName, userLastName)
		VALUES (#{userEmail}, #{userFirstName}, #{userLastName});
	</insert>

	<update id="updateById" parameterType="User">
		UPDATE sh-manager_db.User
		SET
		userEmail=#{userEmail},
		userFirstName=#{userFirstName},
		userLastName=#{userLastName},
		WHERE userId=#{userId}
	</update>

</mapper>